doctype html
include header.pug
|
html
  include head
    link(type="text/css" rel="stylesheet" href="/search-results.css")
    script(type="module" src="/search-results.js")
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Results #{query}
  
  body
    +header("Results")
    main
      .container(id="result-location")
        template(class='result-template')
          div(class='result-container row center-align')
            div(class='col s6 offset-s3')
              div(class='card coveo-orange')
                div(class='card-content white-text')
                  p(class='card-text')
    include footer.pug
